[user]
    name = Mac Long
    email = hello@maclong.uk
    signingkey = ~/.ssh/id_ed25519

[core]
    editor = hx
    excludesfile = ~/.gitignore

[init]
    defaultBranch = main

[commit]
    gpgsign = true

[gpg]
    format = ssh

[pull]
    rebase = true

[push]
    autoSetupRemote = true

[alias]
    # Status and info
    s = status --short --branch
    st = status

    # Logging
    l = log --oneline --graph --decorate --all
    ll = log --graph --pretty=format:'%C(yellow)%h%Creset -%C(red)%d%Creset %s %C(green)(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    last = log -1 HEAD --stat

    # Branching
    b = branch
    ba = branch -a
    bd = branch -d
    bD = branch -D
    co = checkout
    cob = checkout -b
    com = checkout main

    # Adding and committing
    a = add
    aa = add --all
    ac = "!f() { msg=\"${!#}\"; set -- \"${@:1:$(($#-1))}\"; git add \"$@\"; git commit -m \"$msg\"; }; f"
    aac = "!f() { git add --all && git commit -m \"$1\"; }; f"
    ap = add --patch
    c = commit
    ca = commit --amend -m 
    can = commit --amend --no-edit
    cm = commit -m

    # Diffing
    d = diff
    dc = diff --cached
    ds = diff --stat

    # Stashing
    sth = stash
    stp = stash pop
    stl = stash list
    sts = stash show -p

    # Remote operations
    f = fetch
    fa = fetch --all
    p = push
    pf = push --force-with-lease
    pu = push -u origin HEAD
    pl = pull

    # Reset operations
    unstage = reset HEAD --
    uncommit = reset --soft HEAD~1
