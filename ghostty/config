# • Appearance
background-opacity = .95
background-blur = 45
theme = "vesper"

# • Typography
font-family = "Liga SFMono Nerd Font"
font-feature = +calt, +liga, +dlig
font-size = 11

# • Keybindings
keybind = alt+3=text:#
keybind = alt+equal=equalize_splits
keybind = alt+h=goto_split:left
keybind = alt+j=goto_split:down
keybind = alt+k=goto_split:up
keybind = alt+l=goto_split:right
keybind = alt+ctrl+h=new_split:left
keybind = alt+ctrl+j=new_split:down
keybind = alt+ctrl+k=new_split:up
keybind = alt+ctrl+l=new_split:right
keybind = alt+shift+h=resize_split:left,10
keybind = alt+shift+j=resize_split:down,10
keybind = alt+shift+k=resize_split:up,10
keybind = alt+shift+l=resize_split:right,10
keybind = super+shift+f=toggle_split_zoom
keybind = global:super+§=toggle_quick_terminal
keybind = shift+enter=text:\n
macos-option-as-alt = true

# • Window settings
window-height = 64
window-padding-x = 12
window-padding-y = 8
