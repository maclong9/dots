  "helix_mode": true,
  "vim_mode": false,
  "ui_font_family": "Liga SFMono Nerd Font",
  "buffer_font_family": "Liga SFMono Nerd Font",
  "redact_private_values": true,
  "ui_font_size": 14.0,
  "buffer_font_size": 12.0,
  "theme": "Vesper"
}
